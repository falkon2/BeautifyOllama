{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "BeautifyOllama",
  "version": "0.1.0",
  "identifier": "com.beautifyollama.desktop",
  "build": {
    "frontendDist": "../out",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build "
  },
  "app": {
    "windows": [
      {
        "title": "BeautifyOllama - AI Chat Desktop",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "decorations": true,
        "shadow": true
      }
    ],
    "security": {
      "csp": null
    },
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    }
  },
  "bundle": {
    "active": true,
    "targets": ["dmg", "msi", "nsis", "appimage", "deb"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "BeautifyOllama",
    "copyright": "Copyright Â© 2025 BeautifyOllama",
    "category": "Productivity",
    "shortDescription": "Beautiful AI Chat Desktop Application",
    "longDescription": "BeautifyOllama is a beautiful desktop application for AI chat interactions powered by Ollama."
  }
}
